<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InformSetting">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <android.widget.Button
            android:id="@+id/homeBTN"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:background="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/homeBTN"
            android:fontFamily="@font/title_font"
            android:text="Password Setting"
            android:textColor="#000000"
            android:textSize="25dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="현재 비밀번호"
            android:textSize="20dp"
            android:textColor="#000000"
            android:fontFamily="@font/main_font"/>
        <RelativeLayout
            android:layout_width="430dp"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="@drawable/info_edit_layout">

            <EditText
                android:id="@+id/nowPassEdit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/info_edit"
                android:textSize="17dp"
                android:fontFamily="@font/main_font"
                android:inputType="textPassword"
                android:maxLength="30"
                android:layout_toLeftOf="@+id/nowPassNull"/>
            <ImageView
                android:id="@+id/nowPassNull"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>
        <TextView
            android:id="@+id/nowWrongT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#910011"
            android:textSize="15dp"
            android:fontFamily="@font/main_font"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="변경할 비밀번호"
            android:textSize="20dp"
            android:textColor="#000000"
            android:fontFamily="@font/main_font"/>
        <RelativeLayout
            android:layout_width="430dp"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="@drawable/info_edit_layout">

            <EditText
                android:id="@+id/revisePassEdit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:hint="최대 30자까지 입력 가능합니다"
                android:background="@drawable/info_edit"
                android:textSize="17dp"
                android:fontFamily="@font/main_font"
                android:inputType="textPassword"
                android:maxLength="30"
                android:layout_toLeftOf="@+id/revisePassNull"/>
            <ImageView
                android:id="@+id/revisePassNull"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="변경할 비밀번호 확인"
            android:textSize="20dp"
            android:textColor="#000000"
            android:fontFamily="@font/main_font"/>
        <RelativeLayout
            android:layout_width="430dp"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="@drawable/info_edit_layout">

            <EditText
                android:id="@+id/revisePassCheckEdit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="1dp"
                android:layout_toLeftOf="@+id/revisePassCheckNull"
                android:background="@drawable/info_edit"
                android:fontFamily="@font/main_font"
                android:hint="최대 30자까지 입력 가능합니다"
                android:inputType="textPassword"
                android:maxLength="30"
                android:textSize="17dp" />

            <ImageView
                android:id="@+id/revisePassCheckNull"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>
        <TextView
            android:id="@+id/reviseWrongT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#910011"
            android:textSize="15dp"
            android:fontFamily="@font/main_font"/>
        <android.widget.Button
            android:id="@+id/reviseBTN"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:text="변경하기"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:fontFamily="@font/main_font"
            android:background="@drawable/info_btn_selector"/>
    </LinearLayout>

</LinearLayout>