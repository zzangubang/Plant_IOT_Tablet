<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="700dp"
    android:layout_height="240dp"
    android:background="@drawable/dialog_layout"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/nameEdit"
                android:layout_width="450dp"
                android:layout_height="wrap_content"
                android:background="@drawable/dialog_edit"
                android:fontFamily="@font/main_font"
                android:hint="수정할 이름을 입력하세요"
                android:textColor="#000000"
                android:textColorHint="#888888"
                android:textSize="20dp" />

            <android.widget.Button
                android:id="@+id/nameEditNull"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/edit_null" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <android.widget.Button
                    android:id="@+id/cancelBTN"
                    android:layout_width="100dp"
                    android:layout_height="41dp"
                    android:layout_marginRight="35dp"
                    android:layout_toLeftOf="@+id/applyBTN"
                    android:background="@drawable/dialog_btn_selector"
                    android:fontFamily="@font/title_font"
                    android:stateListAnimator="@null"
                    android:text="Cancel"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <android.widget.Button
                    android:id="@+id/applyBTN"
                    android:layout_width="100dp"
                    android:layout_height="41dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="35dp"
                    android:background="@drawable/dialog_btn_selector"
                    android:fontFamily="@font/title_font"
                    android:stateListAnimator="@null"
                    android:text="Apply"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="20dp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>